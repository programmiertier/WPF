<Window x:Class="mp3Player_WpfApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mp3Player_WpfApplication"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Button Name="btnOpenAudioFile" Click="btnOpenAudioFile_Click">Select Audio file</Button>
        <MediaElement Width="auto" Height="auto" Name="mediaPlayer"></MediaElement>
        <Button Name="playBtn" Content="Play" Click="playBtn_Click"></Button>
        <Button Name="stopBtn" Content="Stop" Click="stopBtn_Click" />
        <Button Name="pauseBtn" Content="Pause" Click="pauseBtn_Click"></Button>
        <Button Name="weiBtn" Content="Weiter" Click="weiBtn_Click" />
    </StackPanel>
</Window>
