<Window x:Class="KundeBewegen_WpfApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KundeBewegen_WpfApplication"
        mc:Ignorable="d"
        Title="MainWindow" Height="620" Width="820">
    <Canvas Name="raumdarstellung" Height="600" Width="800">
        <Border Name="kunde" BorderThickness="5" BorderBrush="Purple" CornerRadius="10">
        <StackPanel>
            <Label>Kunde</Label>
                <Button Name="liste" Click="liste_Click">Liste</Button>
            </StackPanel>
        </Border>
        <Button Name="bewegung" Content="und los" Canvas.Left="10" Canvas.Top="550" Click="bewegung_Click"/>
        <Button Name="zurueck" Content="zurück" Canvas.Left="160" Canvas.Top="550" Click="reset"/>
        <Button Name="pause" Content="Pause" Canvas.Left="260" Canvas.Top="550" Click="pausieren"/>
        <Button Name="weitergehts" Content="weiter" Canvas.Left="360" Canvas.Top="550" Click="weiter"/>
        <Button Name="ende" Content="Ende" Canvas.Left="460" Canvas.Top="550" Click="beenden"/>
        
    </Canvas>
</Window>
